if has('syntax')
	syntax on
endif

set number
set relativenumber
set laststatus=2
set encoding=utf-8
set fileencodings=utf-8
set autoread
set cursorline

set tabstop=2
set shiftwidth=2
set nowrap
set smarttab
set expandtab
set autoindent
set smartindent

set mouse=a
set ttymouse=sgr
set clipboard=unnamed,unnamedplus,autoselect
set backspace=indent,eol,start

set incsearch
set hlsearch

colorscheme hybrid
set background=dark
set term=screen-256color
